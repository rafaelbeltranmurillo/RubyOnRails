<div class="container ">
	<div class="row">
		<div class="MultiCarousel" data-items="1,3,5,6" data-slide="1" id="MultiCarousel"  data-interval="1000">
            <div class="MultiCarousel-inner">
                <% @movies.each do |movie| %>                
                    <div class="item" >                   
                        <div class="pad15">
                            <%= image_tag "https://image.tmdb.org/t/p/w500" +  movie, height: 180, width:180 %>                        
                        </div>
                    </div>
                 <% end %>               
            </div>
            <button class="btn btn-primary leftLst"><</button>
            <button class="btn btn-primary rightLst">></button>
        </div>
	</div>

   

	<div class="row">
	    <div class="col-md-12 text-center text-white">
	        <br/><br/><br/>
	        <hr/>
	        <p>Movies in your Home</p>
	        <p>Cd. Juarez, Chihuahua Mexico. </p>
	        <p>Developers: Rafael Beltran, Joaquin Marquez, Jacinto Armendariz</p>
	    </div>
	</div>
</div>
