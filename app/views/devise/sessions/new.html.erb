<section class="vh-100" style="background-color: #000000;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-md-block ">            
                <%= image_tag "logologin.jpg", height: 660, width: 420,:style => "border-radius: 1rem 0 0 1rem" %>
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false }) do |f| %>
                

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0"> <%= image_tag "logo.png", height: 75 %></span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <div class="form-outline mb-4">
                    <div class="field">
                      <%= f.label :email, class:"pb-2" %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>
                    </div>
                  </div>

                  <div class="form-outline mb-4">
                     <div class="field">
                        <%= f.label :password, class:"pb-2" %><br />
                        <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg" %>
                      </div>
                                    
                      <% if !alert.nil?  %>                    
                          <% if alert.include? "Invalid" %>
                            <p class="alert text-danger"><%= alert %></p> 
                          <% else %>
                            <p class="alert text-primary"><%= alert %></p> 
                          <% end %>                                          
                      <% end %> 
                  </div>

                  

                   <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Sign in", class:"btn btn-dark btn-lg btn-block" %>
                  </div>                
                
                <% end %>

                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





